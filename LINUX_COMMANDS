#!/bin/bash
# ==========================================
# LINUX REVISION NOTES (Day 1 to Day 5)
# ==========================================
# This file is structured for learning + quick revision.
# You can run commands in terminal as examples.
# ------------------------------------------


# -------------------------------
# DAY 1: Basic Navigation
# -------------------------------
# 'pwd' -> Print working directory (where am I?)
pwd

# 'ls' -> List files and directories
ls
ls -l       # long listing with permissions, ownership, size, date
ls -a       # show hidden files (starting with .)

# 'cd' -> Change directory
cd /home    # move to /home directory
cd ~        # move to home directory of current user
cd ..       # move one level up


# -------------------------------
# DAY 2: File & Directory Operations
# -------------------------------
# Creating files and directories
touch file1.txt file2.txt       # create empty files
mkdir myfolder                  # create directory
mkdir -p parent/child           # create nested directories

# Copying, moving, renaming
cp file1.txt backup_file1.txt   # copy file
mv file2.txt renamed_file2.txt  # rename file
mv renamed_file2.txt myfolder/  # move file to folder

# Deleting
rm backup_file1.txt             # remove file
rm -r myfolder                  # remove directory recursively
rm -rf myfolder                 # force remove without asking (dangerous!)


# -------------------------------
# DAY 3: File Viewing & Editing
# -------------------------------
# Viewing file content
cat file1.txt                   # display entire file content
less /etc/passwd                # open file with page-by-page navigation
head -5 file1.txt               # show first 5 lines
tail -5 file1.txt               # show last 5 lines
tail -f logfile.log             # follow logs in real-time

# Editing files
nano file1.txt                  # simple editor
vim file1.txt                   # powerful editor (advanced use)


# -------------------------------
# DAY 4: User & Group Management
# -------------------------------
# 'whoami' -> shows current logged in user
whoami

# Adding users (requires root)
# sudo useradd newuser
# sudo passwd newuser

# Switching user
su - newuser

# Adding groups
# sudo groupadd developers
# sudo usermod -aG developers newuser   # add user to group


# -------------------------------
# DAY 5: Permissions & Ownership
# -------------------------------
# Each file/directory has 3 types of permissions: r, w, x
# For 3 categories: User(owner), Group, Others
# Example from 'ls -l':
# -rwxr-xr--   1 user group   1234 Jan 1  file.sh
# u=user(owner), g=group, o=others

# chmod (change permissions)
chmod 755 file.sh               # numeric: rwx r-x r-x
chmod u+x file.sh               # symbolic: add execute permission to user
chmod g-w file.sh               # remove write permission from group
chmod o=r file.sh               # give read-only permission to others

# chown (change owner + group)
sudo chown newuser:newgroup file.sh

# chgrp (change only group ownership)
sudo chgrp developers file.sh
